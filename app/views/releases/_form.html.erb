<%= form_for(@release) do |f| %>
  <div class="span6">
    <% if @release.errors.any? %>
      <div id="error_explanation">
        <h2>No se pudo guardar:</h2>
        <ul>
        <% @release.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :book_id, 'Ingresa el código del libro' %><br />
      <%= text_field_tag :book_code %>
      <div id="book_info"></div>
    </div>

   
    <div class="actions">
      <%= f.submit 'Guardar liberación', { id: "form_submit" } %>
    </div>
  </div>
  <div class="span6">
    <div class="field" style="height:100%;">
      <%= f.label '¿Donde lo encontraste?' %>
      <%= f.hidden_field :location %>
      <br />
      <div id="map_canvas"></div>
    </div>
  </div>
<% end %>