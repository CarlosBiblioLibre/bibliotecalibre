<div class="span10 offset1">
	<div class="row">
		<h2 style="color:#727272">
		Todos los posts
		</h2>
	</div>
	<br><br>
	<div class="row">
		<% @posts.each do |post| %>
			<div class="span1">
				<%= link_to (image_tag post.picture.url(:thumb)), post %>
			</div>
			<div class="span2" style="margin-left: 8px">
				<%= link_to (post.title), post %>
			</div>
		<% end %>
	</div>
</div>