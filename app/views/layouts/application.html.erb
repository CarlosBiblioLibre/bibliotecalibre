  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "La Biblioteca Libre" %></title>
  <meta name="description" content="La Biblioteca Libre">
  <meta name="author" content="La Biblioteca Libre">

  <% if @og_title %>
    <meta property="og:title" content="<%= @og_title %>"/>
  <% else %>
    <meta property="og:title" content="La Biblioteca Libre"/>
  <% end %>

  <% if @og_title %>
    <meta property="og:url" content="<%= request.original_url %>"/>
  <% else %>
    <meta property="og:url" content="http://www.labibliotecalibre.cl/"/>
  <% end %>

  <% if @og_description %>
    <meta property="og:description" content="<%= @og_description %>" />
  <% else %>
    <meta property="og:description" content="La Biblioteca Libre es una iniciativa que promueve el intercambio gratuito de libros: las personas dejan o toman ejemplares de su interés. Los libros de La Biblioteca Libre no son de nadie en particular y son de todos en general. Una vez que leas los libros no los dejes en tu casa juntando polvo, pásalos a alguien más, que sigan su rumbo por el mundo." />
  <% end %>

  <% if @og_image %>
    <meta property="og:image" content="<%= @og_image %>" />
    <meta property="og:image:width" content="320" />
    <meta property="og:image:height" content="222" />
  <% else %>
    <meta property="og:image" content="http://www.labibliotecalibre.cl/assets/lbl2.jpg" />
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="333" />
    <meta property="og:image:height" content="333" />
  <% end %>

  <meta property="og:type" content="website"/>


  <link rel="shortcut icon" href="https://s3.amazonaws.com/bibliorock/favicon.ico" />
  <%= stylesheet_link_tag "nuevo", :media => "all" %>
