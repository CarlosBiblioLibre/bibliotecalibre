<h1>Listing books</h1>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Title</th>
    <th>Code</th>
    <th>Pages</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.code %></td>
    <td><%= book.pages %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

