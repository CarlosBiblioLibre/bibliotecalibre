<%= link_to 'Hallazgos', findings_path %>

<h1>Los libros (<%= Book.count %>):</h1>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Pages</th>
    <th>Editorial</th>
    <th>Género</th>
    <th>Sub Género</th>
    <th>Code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.pages %></td>
    <td><%= book.editorial %></td>
    <td><%= book.genre %></td>
    <td><%= book.subgenre %></td>
    <td><%= book.code %></td>
    <td><%= link_to 'Mostrar', book %></td>
    <td><%= link_to 'Editar', edit_book_path(book) %></td>
    <td><%= link_to 'Eliminar', book, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
  </tr>
<% end %>
</table>

