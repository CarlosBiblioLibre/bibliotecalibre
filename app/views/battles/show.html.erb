
<div id="battle" class="row" data-battle="<%= @battle.id %>" >
	<div class="span12" style="text-align: center;">
		<% if @battle.picture.url(:large) != "/pictures/large/missing.png" %>
		<%= image_tag @battle.picture.url(:large) %>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="span12 negro">
		<p id="notice"><%= notice %></p>
		<h3><%= @battle.title %></h3>
		<p>
			<%= @battle.content %>
		</p>

	</div>
</div>

<div class="row">
	<div class="span6 text-center">
		<div class="centered">
			<% if @battle.book1_picture.url(:medium) != "/pictures/medium/missing.png" %>
			<%= image_tag @battle.book1_picture.url(:medium), style: "margin: auto;" %>
			<% end %>
		</div>
		<h4 style="text-align: center;"><%= @battle.book1 %></h4>
		<h4 id='book1_count' style="text-align: center;"><%= @battle.book1_count %></h4>
		<div class="centered">
			<%= link_to 'Vota!', '#', { id: "vote1", class: "btn btn-large btn-block btn-primary", style: "text-align: center	" } %>
		</div>
	</div>
	<div class="span6">
		<div class="centered">
			<% if @battle.book2_picture.url(:medium) != "/pictures/medium/missing.png" %>
			<%= image_tag @battle.book2_picture.url(:medium), style: "float: center;" %>
			<% end %>
		</div>
		<h4 style="text-align: center;"><%= @battle.book2 %></h4>
		<h4 id='book2_count' style="text-align: center;"><%= @battle.book2_count %></h4>
		<div class="centered">
			<%= link_to 'Vota!', '#', { id: "vote2", class: "btn btn-large btn-block btn-primary"} %>
		</div>
	</div>
</div>

<div class="row">
	<div class="span12">
		<br />
	</div>
</div>

<div class="row">
	<div class="span12">
		<div class="fb-comments" data-href="<%= request.original_url %>" data-numposts="15" data-colorscheme="light"></div>
	</div>
</div>

<div class="row">
	<%= user_signed_in? ? link_to('Edit', edit_battle_path(@battle)) + '  |' : '' %>
	<%= user_signed_in? ? link_to('Back', battles_path) + ' ' : '' %>
</div>