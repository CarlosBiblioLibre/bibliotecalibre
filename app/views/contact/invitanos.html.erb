<%= form_for @message, url: invitanos_path, html: {class: ""} do |form| %>
  <div class="row">
    <div class="span8 offset2 well">
      <div class="row">
        <div class="span8">
          <h4>¡Invítanos y coordinemos una liberación de libros juntos!</h4>
          <br />
        </div>
      </div>
      <div class="row">
        <div class="span3">
          <%= form.label :name %>
          <%= form.text_field :name, class: "span3", placeholder: "Nombre" %>
          <%= form.label :email %>
          <%= form.text_field :email, class: "span3", placeholder: "Correo" %>
          <label>Asunto</label>
          <%= form.text_field :subject, class: "span3" %>
        </div>
        <div class="span4">
          <div class="row">
            <div class="span4">
              <label>Mensaje</label>
              <%= form.text_area :body, class: "input-xlarge span5", rows: 10 %>
            </div>
          </div>
          <div class="row">
            <div class="span4">
              <%= form.submit "Enviar", class: "btn btn-primary pull-right" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>