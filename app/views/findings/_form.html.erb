
<%= form_for(@finding) do |f| %>
<div class="row">
  <div class="span6">
    <% if @finding.errors.any? %>
      <div class="row">
        <div class="span6">
        <div id="error_explanation">
          <h2>No se pudo guardar:</h2>
          <ul>
          <% @finding.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
        </div>
      </div>
    <% end %>
    <div class="row">
    <div class="span6">
      <% if not params[:code].present? %>
        <div class="field">
          <%= f.label :book_id, 'Ingresa el código del libro' %><br />
          <%= text_field_tag :book_code %>
          <div id="book_info"></div>
        </div>
      <% else %>
        <% book = Book.find_by_code(params[:code]) %>
        <input type="hidden" name="finding[book_id]" value="<%= book.id %>">
        <div class="alert alert-block alert-info">
          <p>
            <b>Título:</b>
            <%= book.title %>
          </p>
          <p>
            <b>Autor:</b>
            <%= book.author %>
          </p>
          <p>
            <b>Género:</b>
            <%= book.genre %>
          </p>
        </div>
      <% end %>
    </div>
    </div>

    <div class="row">
    <div class="span6">
      <div class="field">
        <%= f.label :how, '¿Cómo te llego el libro?' %><br />
        <%= f.select :how, Finding.how_options %>
      </div>
    </div>
    </div>
    <div class="row">
    <div class="span6">
      <div class="field">
        <%= f.label :username, '¿Cómo te llamas?' %><br />
        <%= f.text_field :username %>
      </div>
    </div>
    </div>

    <div class="row">
    <div class="span6">
      <div class="field">
        <%= f.label :email, '¿Tu correo electrónico?' %><br />
        <%= f.text_field :email %>
      </div>
    </div>
    </div>
  </div>
  <div class="span6">
    <div class="field" style="height:100%;">
      <%= f.label :location, '¿Dónde lo encontraste? (Haz clic en el mapa)' %>
      <%= f.hidden_field :location %>
      <br />
      <div id="map_canvas"></div>
    </div>
  </div>
</div>
<div class="row">
  <div class="span6">

    <div class="actions">
      <%= f.submit 'Guardar hallazgo', { id: "form_submit_new" } %>
    </div>

  </div>
</div>
<% end %>
