<div class="row">
	<div class="span12">
		<div class="well negro">
			<p>
			  <b>Libro encontrado: </b>
			  <%= Book.find(@finding.book_id).title %>
			</p>
			<p>
			  <b>Código: </b>
			  <%= Book.find(@finding.book_id).code %>
			</p>
			<p>
			  <b>¿Cómo llegó a ti?:</b>
			  <%= @finding.how %>
			</p>

		</div>
	</div>
</div>
<div class="row">
	<div class="span12">
			<%= user_signed_in? ? link_to('Editar', edit_finding_path(@finding) )+' |' : '' %>
